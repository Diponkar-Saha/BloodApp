<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.util.BloodFragment">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:gravity="left"
        android:text="What is\nYour Blood Group"
        android:textColor="#000000"
        android:textSize="30dp"
        android:textStyle="bold"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="16dp"
        android:gravity="center">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:weightSum="3"
                >

                <Button
                    android:id="@+id/aplus"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@drawable/red_round"
                    android:button="@android:color/transparent"
                    android:text="A+"
                    android:textAlignment="center"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    />

                <Button
                    android:id="@+id/aminus"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@drawable/red_round"
                    android:button="@android:color/transparent"
                    android:text="A-"
                    android:textAlignment="center"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    />


                <Button
                    android:id="@+id/bplus"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@drawable/red_round"
                    android:button="@android:color/transparent"
                    android:text="B+"
                    android:textAlignment="center"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="10dp">

                <Button
                    android:id="@+id/bminus"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@drawable/red_round"
                    android:button="@android:color/transparent"
                    android:text="B-"
                    android:textAlignment="center"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    />



                <Button
                    android:id="@+id/oplus"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@drawable/red_round"
                    android:button="@android:color/transparent"
                    android:text="O+"
                    android:textAlignment="center"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    />

                <Button
                    android:id="@+id/ominus"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@drawable/red_round"
                    android:button="@android:color/transparent"
                    android:text="O-"
                    android:textAlignment="center"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="10dp">

                <Button
                    android:id="@+id/abplus"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@drawable/red_round"
                    android:button="@android:color/transparent"
                    android:text="AB+"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:textAlignment="center" />
                <Button
                    android:id="@+id/abminus"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@drawable/red_round"
                    android:button="@android:color/transparent"
                    android:text="AB-"
                    android:layout_marginLeft="10dp"
                    android:textAlignment="center" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="32dp"
            android:gravity="center"
            android:text="Your Blood need to accurate\n
if you don't know about it.Pleaase contact nearest"
            android:textColor="#000000"
            android:textSize="20dp"
            >

        </TextView>

        <Button
            android:id="@+id/b_group_btn"
            android:layout_width="270dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:background="@drawable/red_button"
            android:shadowColor="#A8A8A8"
            android:text="Next"

            android:textColor="#FFFFFF"
            android:textSize="30sp"
            />
    </LinearLayout>



</LinearLayout>